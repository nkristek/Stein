                        Width="42" 
                        Height="42" 
                        Clip="F1 M 0,0L 42.6667,0L 42.6667,42.6667L 0,42.6667L 0,0">
                <Rectangle Width="42" 
                           Height="42"
                           Stretch="Fill" 
                           Fill="Transparent" />
