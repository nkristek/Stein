<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/UiResources.FlatLightThemePack;component/DefaultStyles/Button.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    
    <Style x:Key="ToolbarButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="1"/>

        <Style.Triggers>

            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#80ffffff"/>
                <Setter Property="BorderBrush" Value="{DynamicResource Neutral5Brush}"/>
            </Trigger>

        </Style.Triggers>
    </Style>

</ResourceDictionary>